// link Element
.post-body a{
    background:#3b91d3;
    font-weight: bold;
}

.post-body #References{
    background:#ccc
}

// em Element
.post-body em{
    background: #ff0;
    background-color: transparent;
    box-shadow: inset 0 -2px 0 rgba(255,162,0,.8);
}

// strong Element
.post-body strong{
    font-weight: bold;
    background: #ff0;
    background-color: transparent;
    box-shadow: inset 0 -2px 0 rgba(255,162,169,.8);
}

// prettyprint
pre{
    word-break: break-all;
    word-wrap: break-word;
}

